{
  "name": "linggen-vscode",
  "displayName": "Linggen",
  "description": "Your local-first memory layer for vibe coding. Index your projects, documents, and notes on your own machine, then search and chat with AI â€“ with your data staying completely local.",
  "version": "0.3.2",
  "publisher": "linggen",
  "homepage": "https://linggen.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/linggen/linggen-vscode"
  },
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "linggen.installCli",
        "title": "ðŸŒ€ Linggen: Install Linggen CLI"
      },
      {
        "command": "linggen.indexCurrentProject",
        "title": "ðŸŒ€ Linggen: Index Current Project"
      },
      {
        "command": "linggen.configureCursorMsp",
        "title": "ðŸŒ€ Linggen: Connect to Linggen"
      },
      {
        "command": "linggen.explainAcrossProjects",
        "title": "ðŸŒ€ Linggen: Explain Across Projects"
      },
      {
        "command": "linggen.showGraphInPanel",
        "title": "ðŸŒ€ Linggen: Show Graph"
      },
      {
        "command": "linggen.openFrequentPrompts",
        "title": "ðŸŒ€ Linggen: Open Frequent Prompts"
      },
      {
        "command": "linggen.pinToMemory",
        "title": "ðŸŒ€ Linggen: Pin to Memory"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "linggen.showGraphInPanel",
          "group": "navigation@12"
        }
      ],
      "editor/context": [
        {
          "command": "linggen.explainAcrossProjects",
          "group": "navigation@12"
        },
        {
          "command": "linggen.pinToMemory",
          "when": "editorHasSelection",
          "group": "navigation@12"
        },
        {
          "command": "linggen.showGraphInPanel",
          "group": "navigation@13"
        }
      ]
    },
    "configuration": {
      "title": "Linggen",
      "properties": {
        "linggen.backend.httpUrl": {
          "type": "string",
          "default": "http://localhost:8787",
          "description": "Base URL of the Linggen HTTP server"
        },
        "linggen.backend.explainAcrossProjectsEndpoint": {
          "type": "string",
          "default": "/api/query",
          "description": "HTTP path for 'Explain Across Projects'"
        },
        "linggen.panel.autoReveal": {
          "type": "boolean",
          "default": true,
          "description": "Auto-reveal panel when results arrive"
        },
        "linggen.panel.embedUrl": {
          "type": "string",
          "default": "",
          "description": "Embed URL for Linggen panel (leave empty for native UI)"
        },
        "linggen.healthPoll.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Periodically check Linggen server health"
        },
        "linggen.healthPoll.intervalMs": {
          "type": "number",
          "default": 5000,
          "minimum": 1000,
          "description": "Health check interval (ms)"
        },
        "linggen.healthPoll.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Linggen status in status bar"
        },
        "linggen.installUrl": {
          "type": "string",
          "default": "https://linggen.dev",
          "description": "URL for Linggen installation instructions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.x",
    "@types/mocha": "^10.0.6",
    "@types/glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/test-electron": "^2.3.8",
    "mocha": "^10.2.0",
    "glob": "^10.3.10"
  }
}